<% include ../partials/nav.ejs %>
<div class="hebrew-content">
        <div class="rtl  heb-content" data-book = "<%=numberBookEng %>">
            <% hebrews.forEach(function(bible, index) { %>
                <div class="heb-content--flex">
                    <div class="heb-content--verse" data-verse="<%= bible.numVerse %>">
                    <a name="<%= bible.numVerse %>" class="unit stih">
                        <%= bible.numVerse %>
                    </a>
                    <% bible.textVerse.forEach(function(verse) { %>
                        <div class="unit" data-id="<%= verse.wordID %>">
                            <span class="strongs"><%=  verse.st_strong %></span>
                            <span class="manuscript"><%-  verse.manuscript %></span>
                            <span class="translit"><%=  verse.transliteration %></span>
                            <span class="hebrew"><%=  verse.lex_Hebrew %></span>
                            <span class="morph" title='<%=  verse.morph %>'><%=  verse.morph_prscoderus %></span>
                            <span class="eng"><%=  verse.gloss_Eng %></span>
                            <span class="rus"><%=  verse.gloss_Rus %></span>
                            <!-- <span class="strongsnt"><%=  verse.lex_number %></span> -->
                        </div>
                        <% }); %>
                    </div>

                    <div class="heb-content--verse" data-verse="<%= bible.numVerse %>">
                        <div class="heb-content--content">
                        <% if (paralels) { %>
                            <%- paralels[index].text %>
                          <% } %>
                        </div>    
                    </div>
                </div>
                <% }); %>
        </div>
</div>