  function index(ctx, next) {
    // /
    if (ctx.hash == "") {
      ctx.hash = "book/Gen/1";
      location.hash = '#' + ctx.hash;
    }

    $.get('/h' + ctx.hash, function (data) {
      document.querySelector('.hebrew-container')
        .innerHTML = data;
        // переход по якорю
      if (ctx.querystring != "") {


var anchor = getParameterByName('hf');
if (anchor){
        $(document).scrollTop($("[name=" + anchor + "]").offset().top);
      }
      }
    });
  }
  
  function getParameterByName(name, url) {
    if (!url) url = window.location.href;
    name = name.replace(/[\[\]]/g, "\\$&");
    var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
        results = regex.exec(url);
    if (!results) return null;
    if (!results[2]) return '';
    return decodeURIComponent(results[2].replace(/\+/g, " "));
}
