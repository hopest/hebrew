  };

  function anchor() {

  };

  function index(ctx) {
    if (ctx.hash == "") {
      ctx.hash = "book/Gen/1";
      location.hash = '#' + ctx.hash;
    }
    $.get('/h' + ctx.hash, function (data) {
      document.querySelector('.hebrew-container')
        .innerHTML = data;
        // переход по якорю
      if (ctx.querystring != "") {
        $(document).scrollTop($("[name=" + ctx.querystring + "]").offset().top);
      }
    });
  }
</script>